#include <iostream>
using namespace std;

int main() {
	// your code goes here
	for(int i=1;i<=4;i++)
	{
	    for(int j=1;j<=i;j++)
	    cout<<j;
	    for(int k=6-i;k>=i;k--)
	    cout<<" ";
	    for(int l=i;l>=1;l--)
	    {
	        if(l==4)
	        continue;
	        cout<<l;
	    }
	    cout<<endl;
	}
	return 0;
}
