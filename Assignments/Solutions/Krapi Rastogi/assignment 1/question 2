#include <iostream>
using namespace std;
//question 2

int main() {
	// your code goes here
	for(int i=1;i<=5;i++)
	{
	    for(int j=1;j<=6-i;j++)
	    cout<<"*";
	    for(int k=1;k<=2*(i-1);k++)
	    cout<<" ";
	    for(int l=1;l<=6-i;l++)
	    cout<<"*";
	    cout<<endl;
	    
	}
	for(int i=5;i>=1;i--)
	{
	    for(int j=1;j<=6-i;j++)
	    cout<<"*";
	    for(int k=1;k<=2*(i-1);k++)
	    cout<<" ";
	    for(int l=1;l<=6-i;l++)
	    cout<<"*";
	    cout<<endl;
	    
	}
	return 0;
}
