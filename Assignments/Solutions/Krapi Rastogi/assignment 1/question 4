#include <iostream>
using namespace std;

int main() {
	// your code goes here
	for(int i=1;i<=3;i++)
	{
	    for(int j=1;j<=3-i;j++)
	    cout<<" ";
	    for(int k=1;k<=i;k++)
	    cout<<" *";
	    cout<<endl;
	}
	for(int i=1;i<=2;i++)
	{
	    for(int j=1;j<=i;j++)
	    cout<<" ";
	    for(int k=i;k<=2;k++)
	    cout<<" *";
	    cout<<endl;
	}
	return 0;
}
